modules = ["nodejs-20"]
[nix]
channel = "stable-25_05"
packages = ["unzip"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Forex Decision Engine"

[[workflows.workflow]]
name = "Forex Decision Engine"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd forex-decision-engine && PORT=5000 npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["node", "forex-decision-engine/dist/server.js"]
build = ["bash", "-c", "cd forex-decision-engine && npm install && npm run build"]
