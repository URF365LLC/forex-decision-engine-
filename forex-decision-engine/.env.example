# Twelve Data API Key (Required)
# Get yours at: https://twelvedata.com/
TWELVE_DATA_API_KEY=your_api_key_here

# Twelve Data Crypto Exchange (Optional, defaults to Binance)
TWELVE_DATA_CRYPTO_EXCHANGE=Binance

# xAI Grok API Key (Optional - for sentiment analysis)
XAI_API_KEY=your_xai_key_here

# Resend API Key (Optional - for email alerts)
RESEND_API_KEY=your_resend_key_here

# Server Port (Optional, defaults to 5000)
PORT=5000

# Log Level (Optional, defaults to info)
LOG_LEVEL=info
